component: mock-mv
part-of: mosip
activeProfileEnv: mz 
springConfigLabel:  {{ config_repo.version }}
configServerUrl: {{ config_server.internal_url }}
probe:
  initialDelay: 30  # Seconds
  period: 30 # Seconds
imagePullPolicy: Always

exportLogs: enabled  # Let filebeat export the logs

isGlowroot: present

dockerHub:
  private: {{ docker.hub.private }}  
  keyname: {{ docker.hub.keyname }}

services:
  mockmv:
    serviceName: {{ versions.services.mock.mv.name }}
    dockerImage: {{ versions.services.mock.mv.image }}
    containerPort: 8081
    servicePort: 80
    ingressPath: /v1/mockmv
    healthUrl: /v1/mockmv/actuator/health
    podconfig:
      {{ podconfig.mockmv.service | to_nice_yaml(indent=6) | indent(6) }}
domain: {{ sandbox_domain_name }}