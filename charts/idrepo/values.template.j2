component: idrepo
part-of: mosip
activeProfileEnv: mz 
springConfigLabel: {{ config_repo.version }} 
configServerUrl: {{ config_server.internal_url }}
exportLogs: enabled  # Let filebeat export the logs

ingress:
   namespace: default
artifactoryUrl: {{ artifactory_url }} 
sitePublicUrl: {{ site.sandbox_public_url }}
iamAdapterUrl: {{ iam_adapter_url }}
biosdkServiceUrl: {{ biosdk_service_url }}

probe:
  initialDelay: 60  # Seconds
  period: 30 # Seconds
imagePullPolicy: Always

isGlowroot: {{ is_glowroot }} 

dockerHub:
  private: {{ docker.hub.private }}  
  keyname: {{ docker.hub.keyname }}

extraction_format: mock

services:
  identity:
    serviceName: {{ versions.services.idrepo.identity.name }} 
    dockerImage: {{ versions.services.idrepo.identity.image }}
    serviceName: idrepo-identity-service
    containerPort: 8090
    servicePort: 80
    ingressPath: /idrepository/v1/identity 
    healthUrl: /idrepository/v1/identity/actuator/health
    podconfig:
      {{ podconfig.idrepo.identity| to_nice_yaml(indent=6) | indent(6) }}

  vid: 
    serviceName: {{ versions.services.idrepo.vid.name }} 
    dockerImage: {{ versions.services.idrepo.vid.image }}
    containerPort: 8091
    servicePort: 80
    ingressPath: /idrepository/v1/vid
    healthUrl: /idrepository/v1/actuator/health # TODO: Check this url. It does not have /vid
    podconfig:
      {{ podconfig.idrepo.vid | to_nice_yaml(indent=6) | indent(6) }}

  credentialrequest:
    serviceName: {{ versions.services.idrepo.credentialreq.name }}
    dockerImage: {{ versions.services.idrepo.credentialreq.image }}
    containerPort: 8094
    servicePort: 80
    ingressPath: /v1/credentialrequest
    healthUrl: /v1/credentialrequest/actuator/health
    podconfig:
      {{ podconfig.idrepo.credentialreq | to_nice_yaml(indent=6) | indent(6) }}

  credentialservice:
    serviceName: {{ versions.services.idrepo.credentialservice.name }}
    dockerImage: {{ versions.services.idrepo.credentialservice.image }}
    containerPort: 8095
    servicePort: 80
    ingressPath: /v1/credentialservice
    healthUrl: /v1/credentialservice/actuator/health
    podconfig:
      {{ podconfig.idrepo.credentialservice | to_nice_yaml(indent=6) | indent(6) }}

generators:
  salt:  
    name: {{ versions.services.idrepo.salt.name }} 
    dockerImage: {{ versions.services.idrepo.salt.image }}

domain: {{ sandbox_domain_name }}